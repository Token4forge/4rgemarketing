{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Business Information Schema",
  "description": "Schema for validating business information configuration for AI Marketing System",
  "type": "object",
  "required": [
    "company_portfolio",
    "websites",
    "brand_guidelines",
    "marketing_messages",
    "call_to_actions"
  ],
  "properties": {
    "company_portfolio": {
      "type": "object",
      "required": ["owner", "business_model", "target_markets"],
      "properties": {
        "owner": {"type": "string"},
        "business_model": {"type": "string"},
        "target_markets": {
          "type": "array",
          "items": {"type": "string"}
        },
        "mission": {"type": "string"},
        "vision": {"type": "string"},
        "core_values": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "websites": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "url",
          "description",
          "target_audience",
          "key_services",
          "unique_selling_points",
          "call_to_action"
        ],
        "properties": {
          "name": {"type": "string"},
          "url": {"type": "string", "format": "uri"},
          "description": {"type": "string"},
          "target_audience": {"type": "string"},
          "key_services": {
            "type": "array",
            "items": {"type": "string"}
          },
          "unique_selling_points": {
            "type": "array",
            "items": {"type": "string"}
          },
          "call_to_action": {"type": "string"},
          "priority": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          },
          "conversion_goals": {
            "type": "array",
            "items": {"type": "string"}
          },
          "pricing_model": {"type": "string"},
          "status": {"type": "string"}
        }
      }
    },
    "brand_guidelines": {
      "type": "object",
      "required": ["overall_voice", "tone_keywords", "brand_values"],
      "properties": {
        "overall_voice": {"type": "string"},
        "tone_keywords": {
          "type": "array",
          "items": {"type": "string"}
        },
        "avoid_words": {
          "type": "array",
          "items": {"type": "string"}
        },
        "brand_values": {
          "type": "array",
          "items": {"type": "string"}
        },
        "target_demographics": {"type": "object"},
        "messaging_framework": {"type": "object"}
      }
    },
    "technical_config": {
      "type": "object",
      "properties": {
        "api_integrations": {"type": "object"},
        "content_management": {"type": "object"},
        "automation_tools": {"type": "object"},
        "seo_technical": {"type": "object"}
      }
    },
    "agent_configurations": {
      "type": "object",
      "properties": {
        "content_strategist": {"type": "object"},
        "social_media_orchestrator": {"type": "object"},
        "seo_domination": {"type": "object"},
        "email_marketing_maestro": {"type": "object"}
      }
    },
    "success_metrics": {
      "type": "object",
      "properties": {
        "website_performance": {"type": "object"},
        "social_media_kpis": {"type": "object"},
        "email_marketing_metrics": {"type": "object"},
        "seo_targets": {"type": "object"}
      }
    },
    "content_strategy": {
      "type": "object",
      "properties": {
        "content_pillars": {
          "type": "array",
          "items": {"type": "string"}
        },
        "content_calendar": {"type": "object"},
        "content_distribution": {"type": "object"},
        "seasonal_campaigns": {"type": "object"}
      }
    },
    "audience_segments": {
      "type": "object",
      "patternProperties": {
        "^[a-z_]+$": {
          "type": "object",
          "properties": {
            "demographics": {"type": "string"},
            "pain_points": {
              "type": "array",
              "items": {"type": "string"}
            },
            "messaging": {"type": "string"},
            "channels": {
              "type": "array",
              "items": {"type": "string"}
            },
            "content_preferences": {
              "type": "array",
              "items": {"type": "string"}
            }
          }
        }
      }
    },
    "compliance": {
      "type": "object",
      "properties": {
        "data_privacy": {"type": "object"},
        "security_standards": {"type": "object"},
        "content_guidelines": {"type": "object"},
        "legal_requirements": {"type": "object"}
      }
    },
    "marketing_messages": {
      "type": "object",
      "patternProperties": {
        "^[a-z_]+$": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "call_to_actions": {
      "type": "object",
      "patternProperties": {
        "^[a-z_]+$": {"type": "string"}
      }
    },
    "content_themes": {
      "type": "array",
      "items": {"type": "string"}
    },
    "promotional_priorities": {
      "type": "object",
      "properties": {
        "high": {
          "type": "array",
          "items": {"type": "string"}
        },
        "medium": {
          "type": "array",
          "items": {"type": "string"}
        },
        "low": {
          "type": "array",
          "items": {"type": "string"}
        },
        "development": {
          "type": "array",
          "items": {"type": "string"}
        },
        "seasonal_boosts": {"type": "object"}
      }
    }
  }
}
